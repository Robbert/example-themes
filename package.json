{
  "name": "@nl-design-system-unstable/hackathon",
  "version": "1.0.0-alpha.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all build:**",
    "build:style-dictionary": "style-dictionary build --config ./style-dictionary.config.json",
    "clean": "rimraf dist/",
    "lint": "npm-run-all --continue-on-error lint:**",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint --ext '.js,.json,.jsx,.mdx,.ts,.tsx' .",
    "lint:html": "find . -type d \\( -name coverage -or -name dist -or -name node_modules \\) -prune -false -o -name '*.html' -print0 | xargs -0 npx html-validate",
    "lint:md": "markdownlint '**/*.md'",
    "lint:package-json": "npmPkgJsonLint '**/package.json'",
    "lint:prettier": "prettier --check .",
    "lint-fix": "npm-run-all --continue-on-error lint-fix:** prettier",
    "lint-fix:css": "stylelint --fix '**/*.css'",
    "lint-fix:js": "eslint --ext '.js,.json,.jsx,.mdx,.ts,.tsx' .",
    "lint-fix:md": "markdownlint --fix '**/*.md'",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "start": "http-server src/",
    "test": "exit 0",
    "watch": "chokidar --follow-symlinks --initial --command 'npm run build' 'design-token-template/**/*.style-dictionary.json'"
  },
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "chokidar-cli": "2.1.0",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-json": "3.0.0",
    "eslint-plugin-mdx": "1.13.0",
    "eslint-plugin-react": "7.24.0",
    "html-validate": "5.0.2",
    "husky": "7.0.0",
    "lint-staged": "11.0.0",
    "markdownlint-cli": "0.27.1",
    "npm-package-json-lint": "5.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "style-dictionary": "3.0.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2"
  },
  "dependencies": {
    "http-server": "0.12.3"
  }
}
